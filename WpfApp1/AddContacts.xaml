<Window x:Class="WpfApp1.AddContacts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddContacts" Height="350" Width="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF2D628D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="backArrow" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Height ="73" Width="100" Click="back_Click" Margin="0,14,0,0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="images/back.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBox x:Name="searchContact" HorizontalAlignment="Left" Height="37" TextWrapping="Wrap" Text="        SEARCH" VerticalAlignment="Top" Width="263" Margin="182,10,0,0" FontSize="22" Foreground="Gray" TextInput="SearchFor"/>
        <Image x:Name="searchicon" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="53" Source="images/search.png" Margin="182,10,0,0" OpacityMask="White"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="221" Margin="118,67,0,0" VerticalAlignment="Top" Width="327" SelectionChanged="listView_SelectionChanged" Foreground="{x:Null}" Background="{x:Null}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="scrollUp" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="466,67,0,0" Click="list_scrollUp">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="images/whitearrow.png" Height="54" Margin="0,0,8,0"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="scrollDown" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="457,236,0,0" RenderTransformOrigin="0.5,0.5" Click="list_scrollDown">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.431"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate>
                    <Image Source="images/whitearrow.png" Height="54" Margin="0,0,8,0"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="backlbutton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Margin="18,36,0,0" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="27" FontSize="20" Click="back_Click"/>

    </Grid>
</Window>

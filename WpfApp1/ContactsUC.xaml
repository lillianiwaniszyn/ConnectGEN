<UserControl x:Class="WpfApp1.ContactsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="360">
    <Grid>
        <Image x:Name="image" Source="images/headShot.jpg" HorizontalAlignment="Left" Height="70" VerticalAlignment="Center" Width="70"/>
        <Label x:Name="label" Content="Contact Name" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="75,0,76,0" Height="70" Width="209" FontFamily="Arial Black" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Image x:Name="addplus" Source="images/plus.png" HorizontalAlignment="Left" Height="70" VerticalAlignment="Bottom" Width="71" Margin="289,0,0,0"/>
        <Button x:Name="addthiscontact" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="360" Height="70" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="addContact"/>


    </Grid>
</UserControl>
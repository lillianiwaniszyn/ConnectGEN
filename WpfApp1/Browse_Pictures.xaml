            </Button>
            <Button HorizontalAlignment="Left" Margin="143,77,0,0" VerticalAlignment="Top" Width="75" Background="Transparent">
                <Image Source="images/joaquinSimmons.jpg" Height="50"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="75" Background="Transparent">
                <Image Source="images/jazmineBrown.png" Height="50"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="143,134,0,0" VerticalAlignment="Top" Width="75" Background="Transparent">
                <Image Source="images/cimoneSimmons.jpeg" Height="50"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="75" Background="Transparent">
                <Image Source="images/coraBrown.jpg" Height="50"/>

            <Button HorizontalAlignment="Left" Margin="143,198,0,0" VerticalAlignment="Top" Width="75" Background="Transparent">
                <Image Source="images/selfie.jpg" Height="50"/>
            </Button>
        </Grid>
    </ScrollViewer>
</Window>

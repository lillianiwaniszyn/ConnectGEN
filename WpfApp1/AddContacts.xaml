<Window x:Class="WpfApp1.AddContacts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddContacts" Height="825" Width="1500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF2D628D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel x:Name ="listOfContacts" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="900" Margin="339,155,0,0"/>

        <TextBox x:Name="searchContact" HorizontalAlignment="Left" Height="73" TextWrapping="Wrap" Text="        SEARCH" VerticalAlignment="Top" Width="747" Margin="492,32,0,0" FontSize="48" Foreground="Gray" GotKeyboardFocus="SearchingFor" TextChanged="SearchFor" LostFocus="returnToNormal"/>
        <Image x:Name="searchicon" HorizontalAlignment="Left" Height="69" VerticalAlignment="Top" Width="81" Source="images/search.png" Margin="492,36,0,0" OpacityMask="White"/>
        <Button x:Name="scrollUp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128"  Height="122" Margin="1302,155,0,0" Click="scrollUp_Click" >
            <Button.Template>
                <ControlTemplate>
                    <Image Source="images/whitearrow.png" Height="150" Margin="0,0,8,0" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="scrollDown" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5"  Height="128" Margin="1292,491,0,0" Click="Scroll_Down">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.04"/>
                    <RotateTransform Angle="-179.549"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate>
                    <Image Source="images/whitearrow.png" Height="Auto" Margin="-2,-4,2,4"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="backArrow" HorizontalAlignment="Left" VerticalAlignment="Top" Height ="137" Width="214" Click="Back_Click" Margin="0,14,0,0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="images/back.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="backlbutton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" FontFamily="Arial Black" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Height="51" FontSize="36" Click="Back_Click" Content="Back" Margin="39,54,0,0"/>

    </Grid>
</Window>
